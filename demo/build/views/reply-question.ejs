<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>留言回复通知</title>

    <script src="/scripts/vendor-flexible.js"></script>
    <script src="/scripts/reply-question-style.js"></script>
    <link rel="stylesheet" href="//at.alicdn.com/t/font_302276_h29t7hbpdoqrggb9.css">
    <script src="http://res.wx.qq.com/open/js/jweixin-1.0.0.js"></script>
  </head>
  <body>
    <div class="main">
      <section>
        <label for="" class="title">学生姓名：</label>
        <h1 class="content"><%- detail.collegeUser ? detail.collegeUser.nickname : '匿名' %></h1>
      </section>
      <section>
        <label for="" class="title sub-title">留言内容：</label>
        <p class="content">
          <%- detail.title %>
      </p></section>
      <% if(detail.answers.length > 0)  {
        for(var i = 0; i < detail.answers.length; i++){
      %>
        <section>
          <label for="" class="title sub-title">回复内容：</label>
          <p class="content">
            <%- detail.answers[i].content %>
          </p>
        </section>
      <% }} %>
        <section>
          <label for="" class="title sub-title">回复教师：</label>
          <p class="content">
            <i class="iconfont icon-qiuzhidaxue-"></i>
            职业蛙求职学堂专业回复</p>
        </section>
    </div>
    <footer>
      <p>查看更多问答可用电脑登录求职学堂  打开弹幕查看哦！</p>
      <p>http://college.careerfrog.com.cn</p>
    </footer>
  </body>
  <script>
    let link = window.location.href;
    const title ="<%- detail.title %>";
    const desc = "<%- detail.answers[0].content %>";
    const imgUrl = '/images/share.jpg';
    function reConfig(toState) {
        const xhr = new XMLHttpRequest();

       
        xhr.addEventListener('load', configWX);
        xhr.open('GET', `http://careerfrog.com.cn/api/wechat/signature?pageUrl=${encodeURIComponent(link)}`);
        xhr.send();
      }
      reConfig();
      function configWX() {
          const config = JSON.parse(this.responseText);
          // config.debug = true;
          config.jsApiList = ['onMenuShareAppMessage', 'onMenuShareTimeline'];

          wx.config(config);
          if (link.indexOf('?') < 0) {
            link += '?safari=true';
          }
          wx.ready(() => {
            wx.onMenuShareAppMessage({
              title,
              desc,
              link,
              imgUrl,
              type: 'link',
              success() { },
              cancel() { },
            });

            wx.onMenuShareTimeline({
              title,
              desc,
              link,
              imgUrl,
              success() { },
              cancel() { },
            });
          });
        }
  </script>
</html>
